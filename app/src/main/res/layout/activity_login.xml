<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263527"
    android:elevation="2dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/armylogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Smart Tactical Assault"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="log into your account"
            android:textColor="#808080"
            android:textSize="18dp"
            android:textStyle="" />

        <EditText
            android:id="@+id/email"
            android:layout_width="305dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/formbackground"
            android:drawableEnd="@drawable/email"
            android:hint="email address"
            android:inputType="textEmailAddress"
            android:paddingLeft="100dp"
            android:paddingRight="26dp"
            android:textColorHint="@color/colorHintText" />

        <EditText
            android:id="@+id/password"
            android:layout_width="305dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/formbackground"
            android:hint="password"
            android:drawableEnd="@drawable/visibility"
            android:inputType="textPassword"
            android:longClickable="false"
            android:paddingLeft="100dp"
            android:paddingRight="26dp"
            android:textColorHint="@color/colorHintText" />



        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="18dp"
            android:text="Remember me"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Forgot password?"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                />

            <Button
                android:layout_width="0dp"
                android:id="@+id/btnLogin"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/edittextbutton"
                android:drawableLeft="@drawable/login"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />


        </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvSwitchtoRegister"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="100dp"
                android:text="Do not have an account?"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                />

    </LinearLayout>


</LinearLayout>