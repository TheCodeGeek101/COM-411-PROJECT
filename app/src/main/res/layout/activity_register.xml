<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263527"
    android:elevation="2dp"
    tools:context=".Activities.RegisterActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="73dp"
        android:layout_height="63dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/armylogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="sign up with us to get started"
        android:textColor="#808080"
        android:textSize="18dp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="290dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/formbackground"
        android:drawableEnd="@drawable/user"
        android:drawableTint="@color/colorHintText"
        android:hint="fullname"
        android:inputType="textPersonName"
        android:padding="25dp"
        android:paddingLeft="100dp"
        android:paddingRight="26dp"
        android:textColorHint="@color/colorHintText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="290dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/formbackground"
        android:drawableEnd="@drawable/email"
        android:drawableTint="@color/colorHintText"
        android:hint="email address"
        android:inputType="textEmailAddress"
        android:padding="25dp"
        android:paddingLeft="100dp"
        android:paddingRight="26dp"
        android:textColorHint="@color/colorHintText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname" />

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:background="@drawable/formbackground"
        android:drawableEnd="@drawable/visibility"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="25dp"
        android:paddingLeft="100dp"
        android:paddingRight="26dp"
        android:textColorHint="@color/colorHintText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegisterEmail" />

    <TextView
        android:id="@+id/tvSwitchtoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnRegister"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/btnRegister"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextbutton"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegisterPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>