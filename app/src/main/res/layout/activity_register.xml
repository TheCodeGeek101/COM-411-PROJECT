<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263527"
    android:elevation="2dp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/armylogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="sign up with us to get started"
            android:textColor="#808080"
            android:textSize="18dp"
            android:textStyle="" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="305dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/formbackground"
            android:drawableEnd="@drawable/user"
            android:drawableTint="@color/colorHintText"
            android:hint="fullname"
            android:inputType="textPersonName"
            android:paddingLeft="100dp"
            android:paddingRight="26dp"
            android:textColorHint="@color/colorHintText" />

        <EditText
            android:id="@+id/email"
            android:layout_width="305dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/formbackground"
            android:drawableEnd="@drawable/email"
            android:drawableTint="@color/colorHintText"
            android:hint="email address"
            android:inputType="textEmailAddress"
            android:paddingLeft="100dp"
            android:paddingRight="26dp"
            android:textColorHint="@color/colorHintText" />

        <EditText
            android:id="@+id/password"
            android:layout_width="305dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/formbackground"
            android:hint="password"
            android:drawableEnd="@drawable/visibility"
            android:inputType="textPassword"
            android:paddingLeft="100dp"
            android:paddingRight="26dp"
            android:textColorHint="@color/colorHintText" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="305dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/formbackground"
            android:hint="confirm password"
            android:drawableEnd="@drawable/visibility"
            android:inputType="textPassword"
            android:paddingLeft="94dp"
            android:paddingRight="26dp"
            android:textColorHint="@color/colorHintText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            >
            <TextView
                android:layout_width="0dp"
                android:id="@+id/tvSwitchtoLogin"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Already have an account?"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                />

            <Button
                android:layout_width="0dp"
                android:id="@+id/btnRegister"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/edittextbutton"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>